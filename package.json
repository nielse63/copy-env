{
  "name": "@nielse63/copy-env",
  "version": "1.1.0",
  "description": "Automate managing example .env files",
  "main": "dist/cjs/index.js",
  "types": "dist/cjs/index.d.js",
  "exports": {
    "import": "./dist/mjs/index.js",
    "require": "./dist/cjs/index.js"
  },
  "files": [
    "dist",
    "cli.js"
  ],
  "bin": "./cli.js",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "test": "jest",
    "prepare": "husky install",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "lint": "prettier --write ./src && eslint --fix ./src",
    "prebuild": "rm -rf dist/",
    "build": "tsc -p config/tsconfig.cjs.json && tsc -p config/tsconfig.mjs.json",
    "prepack": "npm run build",
    "docs": "typedoc --options config/typedoc.json",
    "postdocs": ".bin/docs-cleanup",
    "release": "dotenv release-it"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nielse63/copy-env.git"
  },
  "keywords": [
    "env",
    "dotenv",
    "cli",
    ".env",
    "config",
    "settings",
    "utils"
  ],
  "author": "Erik Nielsen <erik@312development.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nielse63/copy-env/issues"
  },
  "homepage": "https://github.com/nielse63/copy-env#readme",
  "engines": {
    "node": ">=18.20.5"
  },
  "dependencies": {
    "commander": "^14.0.3"
  },
  "devDependencies": {
    "@babel/core": "^7.29.0",
    "@babel/preset-env": "^7.29.0",
    "@babel/preset-typescript": "^7.28.5",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.2.3",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "babel-jest": "^29.7.0",
    "dotenv-cli": "^11.0.0",
    "eslint": "^8.57.1",
    "eslint-config-airbnb-typescript": "^17.1.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jest": "^29.15.0",
    "eslint-plugin-jest-extended": "^3.0.1",
    "eslint-plugin-prettier": "^5.5.5",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-extended": "^7.0.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "release-it": "^19.2.4",
    "ts-node": "^10.9.2",
    "typedoc": "^0.28.17",
    "typescript": "^5.9.3"
  },
  "lint-staged": {
    "*.{ts,js,json,md,yml}": "prettier --write"
  }
}
